.container
  .span6.offset3{:style => "padding: 50px 0px 0px 0px;"}
    .well{:style => "padding: 20px 0px 40px 70px;"}
      %div{:style => "padding: 0px 0 0px 50px;"} 
        %h2 Login
        %br
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
          .inputs
            = f.input :email, :required => false, :autofocus => true
            = f.input :password, :required => false
            = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
          .actions{:style => "padding: 20px 0 0 70px;"}
            = f.button :submit, "Sign in" , :class => 'btn btn-large btn-success'
    .center
      = render "devise/shared/links" 