.span6.offset3
  = simple_form_for(@skill, html: {class: "form-horizontal"}) do |f|
    = f.error_notification

    %br
    = f.input :title, label: "Package Title"
    %br
    %br
    = f.input :image, label: "Upload a Help Package Background Image"
    %br
    = f.input :tag_list, label: "Help Tags(comma separated)"
    %br
    %br
    = f.input :description, as: :text, input_html: {rows: "4",:style=> 'width: 100%'}, label: "What can founders expect to gain from this help package?"
    %br
    %br
    = f.input :meeting_hrs, collection: 1..40, label: "Weekly Meeting Hours"
    
    = f.input :meeting_desc, as: :text, input_html: {rows: "4",:style=> 'width: 100%'}, label: "What you will accomplish in your meetings?"
    %br
    = f.input :work_hrs, collection: 1..40, label: "Weekly Work Hours in Addition to Meetings"

    = f.input :work_desc, as: :text, input_html: {rows: "4",:style=> 'width: 100%'}, label: "Examples of what you will do durring these hours"

    .form-actions
      = f.submit 'Save', :class => "btn btn-success btn-large"

