.span6.offset3
  = simple_form_for(@startup, html: {class: "form-horizontal"}) do |f|
    = f.error_notification
    %br
    = f.input :name, label: "Startup Name"
    = f.input :description, as: :text, input_html: {rows: "4"}, label: "Startup Description"
    %br
    = f.input :logo, label: "Upload a Logo"
    %br
    = f.input :url, label: "Website",placeholder: 'http://...'
    = f.input :angel_co, label: "AngelList URL",placeholder: 'http://...'
    = f.input :fb_url, label: "Facebook Page",placeholder: 'http://...'
    = f.input :tw_url, label: "Twitter Account",placeholder: 'http://...'

    .form-actions
      = f.submit 'Save', :class => "btn btn-success btn-large"

