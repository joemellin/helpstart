.container
  .row
    .span10.offset1

      .top_box
        = image_tag "250by7802.jpg", :style => "-moz-border-radius-topleft: 9px;-moz-border-radius-topright: 9px;-webkit-border-top-left-radius: 9px;-webkit-border-top-right-radius: 9px;"
        - if @startup.logo.file?
          .profile_image_big
            = image_tag @startup.logo(:large), :class => "img-rounded"
        - else
          .profile_image_big
            = image_tag "default_startup.png", :class => "img-rounded"
      .white_box
        %div
          .profile_title
            .big_title  
              STARTUP
            %h1= @startup.name

            .linked_in_logo
              - if current_user == @startup.user
                - if @startup.url.blank?
                  =link_to "Visit Website", '#',  :class => 'btn disabled btn-large'
                - else
                  =link_to "Visit Website", @startup.url,  :target => '_blank', :class => 'btn btn-success btn-large'
                %p{:style => 'padding:15px 0px 0px 60px;'}= link_to 'Edit', edit_startup_path(@startup)
              - else
                =link_to "Visit Website", @startup.url,  :target => '_blank', :class => 'btn btn-success btn-large'
      

        
        
        %hr
        .feild_hero_title{:style => "padding:10px 0 20px 50px"}   Founder Contact:
        .feild_hero{:style => "padding:0 0 0px 50px"}=link_to "#{@startup.user.name}", @startup.user
        .feild_hero_title{:style => "padding:20px 0 20px 50px"}  About #{@startup.name}:
        .feild_hero{:style => "padding:0 0 30px 50px"}= @startup.description
        %p{:style => 'padding: 0px 0px 50px 50px;'}
          -unless @startup.tw_url.blank?
            = link_to image_tag('twitter.png'), @startup.tw_url,  :target => '_blank'
            &nbsp;&nbsp;
          -unless @startup.fb_url.blank?
            = link_to image_tag('facebook.png'), @startup.fb_url,  :target => '_blank'
            &nbsp;&nbsp;
          -unless @startup.angel_co.blank?
            = link_to image_tag('angel.png'), @startup.angel_co,  :target => '_blank'


   